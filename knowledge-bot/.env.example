# App
APP_BASE_URL=http://localhost:8787
JWT_PUBLIC_KEY=replace_with_dev_public_key

# Vector DB
QDRANT_URL=http://qdrant:6333
QDRANT_API_KEY=
QDRANT_EMBED_DIM=768

# Local inference
OLLAMA_BASE_URL=http://ollama:11434
CHAT_MODEL=llama3.1:8b
EMBED_MODEL=nomic-embed-text
MODEL=local
EMBED_PROVIDER=local
CRAWL_INTERNAL_DEPTH=0
CRAWL_EXTERNAL_DEPTH=0

# Reranker
RERANKER_URL=http://reranker:8000
USE_RERANKER=true

# Cloud fallback (Gemini)
GOOGLE_API_KEY=
GEMINI_CHAT_MODEL=gemini-2.0-flash
GEMINI_EMBED_MODEL=text-embedding-004
USE_GEMINI_SAFETY=false
GEMINI_SAFETY_MODEL=text-moderation-latest

# Gateway
GATEWAY_PORT=8787
TENANT_HEADER=X-Tenant-Id
HMAC_HEADER=X-Signature
HMAC_SECRET=dev_shared_secret

# Rate limiting (simple in-memory)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=60

# Admin
ADMIN_API_TOKEN=change_me_admin_token
ADMIN_AUTH_MODE=token # token|jwt
ADMIN_JWT_SECRET=change_me_if_using_jwt
ADMIN_JWT_ISSUER=
ADMIN_JWT_AUDIENCE=
SOURCE_DB_PATH=./data/sources.db
VITE_DEFAULT_EMBED_PROVIDER=local
VITE_DEFAULT_INTERNAL_CRAWL_DEPTH=0
VITE_DEFAULT_EXTERNAL_CRAWL_DEPTH=0

# Logging
LOG_LEVEL=info

# CORS (comma-separated allowlist; leave blank to allow all for demo)
CORS_ORIGINS=http://localhost:8000,http://localhost:3030

# Ingestion
INGEST_CRON=0 2 * * *
